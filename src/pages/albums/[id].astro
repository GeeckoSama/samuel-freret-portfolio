---
import ReverseScrollingGallery from "../../components/ReverseScrollingGallery.astro";
import Layout from "../../layouts/Layout.astro";
---

<Layout title='Album'>
  <div class='fixed inset-x-10 top-10 z-40 mix-blend-difference invert'>
    <!--  <a href='/' class='group cursor-pointer px-2.5 py-1.5'
      ><span class='text-lg font-semibold group-hover:underline'>return</span
      ></a
    > -->
    <div class='inline-flex space-x-4 items-center'>
      <a
        href='/'
        class='rounded px-3.5 py-1.5 items-center text-center flex border-2 border-white hover:border-zinc-950 transition-colors group'
      >
        <svg
          xmlns='http://www.w3.org/2000/svg'
          fill='none'
          viewBox='0 0 24 24'
          stroke-width='2.5'
          stroke='currentColor'
          class='w-6 h-6 group-hover:-translate-x-1 transition-transform'
        >
          <path
            stroke-linecap='round'
            stroke-linejoin='round'
            d='M10.5 19.5 3 12m0 0 7.5-7.5M3 12h18'></path>
        </svg>
      </a>
      <h1 class='text-5xl font-black text-zinc-950 uppercase'>
        Titre de l'abum
      </h1>
    </div>
  </div>
  <ReverseScrollingGallery />
</Layout>
